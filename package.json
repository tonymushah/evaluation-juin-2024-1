{
	"name": "evaluation-juin-2024-1",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"codegen": "graphql-codegen",
		"backend:admin": "cargo run --bin admin",
		"codegen:admin": "pnpm backend:admin && pnpm codegen -c ./app/codegen/admin.ts",
		"backend:equipe": "cargo run --bin equipe",
		"codegen:equipe": "pnpm backend:equipe && pnpm codegen -c ./app/codegen/equipe.ts",
		"backend:global": "cargo run --bin global",
		"codegen:global": "pnpm backend:global && pnpm codegen -c ./app/codegen/global.ts",
		"codegen:all": "pnpm codegen:global && pnpm codegen:admin && pnpm codegen:equipe",
		"backend": "pnpm codegen:all && cargo run"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^5.0.2",
		"@graphql-codegen/client-preset": "^4.2.6",
		"@graphql-typed-document-node/core": "^3.2.0",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-node": "^5.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.7",
		"@types/js-cookie": "^3.0.6",
		"@types/lodash": "^4.17.4",
		"autoprefixer": "^10.4.19",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"graphql": "^16.8.1",
		"postcss": "^8.4.38",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-add": "^2.0.10",
		"svelte-check": "^3.6.0",
		"svelte2tsx": "^0.7.9",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.4.1",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.0.0-alpha.20",
		"vite": "^5.0.3",
		"vite-plugin-kit-routes": "^0.6.2",
		"vitest": "^1.2.0"
	},
	"type": "module",
	"dependencies": {
		"@fontsource-variable/inter": "^5.0.18",
		"@fontsource/fira-mono": "^5.0.13",
		"@fontsource/poppins": "^5.0.14",
		"@popperjs/core": "^2.11.8",
		"@urql/svelte": "^4.2.0",
		"flowbite": "^2.3.0",
		"flowbite-svelte": "^0.46.1",
		"js-cookie": "^3.0.5",
		"lodash": "^4.17.21",
		"tailwind-merge": "^2.3.0"
	}
}
